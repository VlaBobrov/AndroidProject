<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chsByIngrFragment"
    android:padding="16dp"
    android:background="#FFCDDD"
    >

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/weightView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:text="Weight"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/weightSpinner"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@color/prpl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/weightView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:text="Price"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightView" />

    <Spinner
        android:id="@+id/priceSpinner"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/priceView"
        app:layout_constraintTop_toBottomOf="@+id/weightSpinner" />

    <TextView
        android:id="@+id/smietanaView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:text="Smietana"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceView" />

    <Spinner
        android:id="@+id/smietanaSpinner"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/smietanaView"
        app:layout_constraintTop_toBottomOf="@+id/priceSpinner" />

    <TextView
        android:id="@+id/nadzenieView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:text="Nadzienie"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smietanaView" />

    <Spinner
        android:id="@+id/nadzenieSpinner"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@color/prpl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nadzenieView"
        app:layout_constraintTop_toBottomOf="@+id/smietanaSpinner" />


    <TextView
        android:id="@+id/ciaskaView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/prpl"
        android:text="Ciastka"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nadzenieView" />

    <Spinner
        android:id="@+id/ciastkaSpinner"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/prpl"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toEndOf="@+id/ciaskaView"
        app:layout_constraintTop_toBottomOf="@+id/nadzenieSpinner" />

    <Button
        android:id="@+id/serchByButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691" />

</androidx.constraintlayout.widget.ConstraintLayout>